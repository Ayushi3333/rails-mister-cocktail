<h1 class="page-name">Fancy Cocktails</h1>

<div class="m-auto" style="width:90%">
  <div class="row d-flex justify-content-around">
    <% @cocktails.each do |cocktail| %>
   <div class="card m-1 col-12 col-lg-3 p-0">
        <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
</div>
</div>
    <% end %>
</div>
</div>

