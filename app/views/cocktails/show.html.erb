<div class="container">
  <h1 class="page-name"><%= @cocktail.name %></h1>
  <p class="image-rounded"><%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %></p>
  <h5>Recipe for this delicious concoction -</h5>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to dose_path(dose), method: :delete do %>
        <i class="fas fa-trash-alt"></i>  </li>
      <% end %>
    <% end %>
  </ul>
</div>
<div class="container buttons">
  <%= link_to "Add your ingredient", new_cocktail_dose_path(@cocktail), class:"btn btn-primary" %>
  <br>
  <br>
  <%= link_to "Back to list", cocktails_path, class:"btn btn-primary" %>
</div>
